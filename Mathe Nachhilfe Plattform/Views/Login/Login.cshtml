@model user
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Login/_LayoutPage1.cshtml";
}

<h1>Mathe Nachhilfe Plattform</h1>
<!DOCTYPE html>
<html>
<head>
    <title>Mathe Nachhilfe Plattform</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link href="~/css/StyleSheet.css" rel="stylesheet" />


</head>
<body>
    
    
    <div class="container">
        <div class="img">
            <img src="~/lib/images/undraw_Work_time_re_hdyv.svg" />
        </div>
        <div class="login-container">
            <form  action="login" method="post">

                <img class="avatar" src="~/lib/images/undraw_male_avatar_323b.svg" />
                <h2>Welcome</h2>
                <div class="input-div one focus">
                    <div class="i">
                        <i class="fas fa-user"></i>
                    </div>
                    <div>
                        <h5>Email</h5>
                        <input class="input" placeholder="Email" type="email" required="" />
                    </div>

                </div>
                <div class="input-div two">
                    <div class="i">
                        <i class="fas fa-lock"></i>
                    </div>
                    <div>
                        <h5>Password</h5>
                        <input class="input" placeholder="Password" type="password" />
                    </div>
                </div>
                <a herf="#">Forgot your password</a>
                <input type="submit" class="btn " value="LOGIN" />
                <a href="https://localhost:44329/user/create" >Register as a new user</a>
                <br />
            </form>
        </div>

    </div>
    <script type=" text/javascript" src="~/js/site.js"></script>

    <br />
    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</body>

</html>
